<!DOCTYPE html>
<html lang="en" class="h-full">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <title>Dashboard</title>
</head>

<body class="bg-zinc-900 text-white h-full flex flex-col">

    <!-- Nav-Bar -->
    <nav class="bg-zinc-800 shadow-lg w-full py-4">
        <div class="max-w-2xl mx-auto px-4 flex justify-between items-center">
            <h1 class="text-2xl font-bold">Hey, <%= user.username %> ðŸ‘‹</h1>
            <a href="/logout" class="text-blue-500 hover:text-blue-400 transition duration-200">
                Logout
            </a>
        </div>
    </nav>
    <!-- Nav-Bar -->

    <!-- Main Content Area -->
    <main class="flex-1">
        <div class="max-w-2xl mx-auto h-full p-4 flex flex-col gap-6">
            <!-- Create Post Section -->
            <div>
                <p class="text-zinc-300 mb-4">Create Your Posts Here</p>
                <form action="/createPost" method="post" class="flex-1 flex flex-col gap-4">
                    <textarea name="content" rows="5" class="w-full flex-1 p-3 bg-zinc-700 text-white rounded-lg resize-none 
                               focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="Write something..."
                        required></textarea>
                    <button type="submit" class="w-full bg-blue-600 text-white py-2 px-4 rounded-lg 
                               hover:bg-blue-700 focus:outline-none focus:ring-2 
                               focus:ring-blue-500 transition duration-200">
                        Create New Post
                    </button>
                </form>
            </div>

            <!-- Posts Section -->
            <div class="posts space-y-6">
                <% if (user.posts && user.posts.length> 0) { %>
                    <% user.posts.forEach((post)=> { %>
                        <div class="bg-zinc-800 p-6 rounded-lg shadow-lg">
                            <div class="flex items-center gap-3 mb-4">
                                <div class="w-10 h-10 bg-rose-500 rounded-full flex items-center justify-center">
                                    <span class="text-lg font-bold">
                                        <%= user.username.charAt(0).toUpperCase() %>
                                    </span>
                                </div>
                                <h3 class="text-lg font-semibold">@<%= user.username %>
                                </h3>
                            </div>
                            <p class="text-zinc-300 mb-4">
                                <%= post.content %>
                            </p>
                            <small class="inline-block text-zinc-400 mb-4">
                                <%= post.likes.length %> Likes
                            </small>
                            <div class="flex gap-4">
                                <a href="/like/<%= post._id %>"
                                    class="text-blue-500 hover:text-blue-400 transition duration-200">
                                    <i class="fas fa-thumbs-up"></i>
                                    <%= !post.likes.indexOf(user._id) ? "Unlike" : "Like" %>
                                </a>

                                <a href="/edit/<%= post._id %>"
                                    class="text-blue-500 hover:text-blue-400 transition duration-200">
                                    <i class="fas fa-edit"></i> Edit
                                </a>
                            </div>
                        </div>
                        <% }) %>
                            <% } else { %>
                                <p class="text-zinc-400 text-center">No posts yet. Create your first post above!</p>
                                <% } %>
            </div>
        </div>
    </main>
</body>

</html>